#include<stdio.h>
#include<stdlib>
#include<ctype.h>
#include<string.h>
#define max 100
int stack[max];
int top=-1;
void push(char ele)
{
if(top==max-1)
{
printf("the stack is full");
}
else
{
stack[++top]=ele;
printf("%d is pushed to stack",ele);
}
}
char pop()
{
if(top<0)
{
printf("the stack is empty");
}
else
{
ele=stack[top--];
}
}
int precedence(char ch)
{
switch(ch)
{
case '+':
case '-':
return 1;
case '*':
case '/':
return 2;
case '^':
return 3;
defualt:
return 0;
}
}
void infixtopostfix(char infix,char postfix)
{
char ch;int i=0;int j=0;
printf("enter the infix expression");
scanf("%s",infix);
while((ch=infix[i++])!='\0')
{
if(ch=='(')
{
push(ch);
}
else if(ch==')')
{
while(top!=-1 && stack[top]!='(')
{
postfix[j++]=pop();
}
pop();
}
else
{
while(top!=0 && precedence(stack[top])>=precendence(ch))
{
postfix[j++]=pop();
}
push(ch);
}
}
while(top!=-1)
{
postfix[j++]=pop();
}
postfix[j]='\0';
printf("the postfix expression is:%s",postfix);
}
}




